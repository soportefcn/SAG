@model SAG2.Models.Articulo
@{
    ViewBag.Title = "Modificar";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
/* Conversion a mayusculas */
input[type="text"], textarea
{
    text-transform: uppercase;
}
</style>
<div id="SAGBox">
    <h3>Artículos</h3>
    <div id="controles">
  
    </div>
    <div id="contenido">
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ID)
    <fieldset>

   <div class="panel panel-default">
  <div class="panel-heading"><h3><b>Datos del Artículo</b></h3></div>
  <div class="panel-body">
      <div class="form-inline">
          <div class="form-group" style="margin-right: 30px;">
              @Html.LabelFor(model => model.Nombre)
          </div>
       
           @Html.EditorFor(model => model.Nombre ,  new { @class = ViewData["form-control"] })
           
      </div>

      <br />
      <div class="form-inline" style="margin-bottom: 20px;">
        <div class="form-group" style="margin-right: 44px;">
            @Html.LabelFor(model => model.CategoriaID, "Categoria")
        </div>
        <div class="form-group">
           @Html.DropDownList("CategoriaID", null, "-- SELECCIONE UNA CATEGORIA --", new { @class = "form-control"} )
         
        </div>
          </div>
     
      <div class="form-inline" style="margin-bottom: 20px;">
        <div class="form-group" style="margin-right: 15px;">
            @Html.LabelFor(model => model.UnidadMedidaID, "Unidad/Medida")
        </div>
        <div class="form-group">
            @Html.DropDownList("UnidadMedidaID", null, "-- SELECIONE UNA UNIDAD/MEDIDA --", new { @class = "form-control"} )
         
        </div>
      </div>
      

     
  </div>
	<div class="panel-footer">
    <div  style ="width: 500px ; display:inline-block">
             <a class="btn btn-success" href="../Index" onclick="window.open(this.href, 'Buscar','width=750,height=350,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class ="fa fa-search fa-fw"></span>BUSCAR</a>
        <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Articulos/Create"><span class ="fa fa-file-o  fa-fw"></span>NUEVO</a>
        <a class="btn btn-danger" href="../Delete/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea borrar este registro?');"><span class ="fa fa-trash-o fa-fw"></span>ELIMINAR</a>
        <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Articulos/Create"><span class ="fa fa-undo fa-fw"></span> CANCELAR</a>
            
        </div>
         <div style="float :right;width:150px;display:inline-block">
 <input class="btn btn-primary" type="submit" value="Guardar" />
 </div>

</div>
</div>
          
    </fieldset>
}
    </div>
</div>