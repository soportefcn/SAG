@model IEnumerable<SAG2.Models.UnidadMedida>
@{
    Layout = "~/Views/Shared/PopUp.cshtml";
    ViewBag.Title = "Unidades de medida";
}

 <div id="contenido_popup">
      <div class="form-group">
          <input type="text" class="form-control" placeholder="Busqueda" id="busqueda" style="width: 300px;">
        </div> 
    <table class ="table table-bordered table-hover">
        <thead class="fixedHeader">
    <tr class="info">
        <th style="width: 49px;" class="codigo">Cód.</th>
        <th style="width: 650px;">Descripción</th>        
        <th class="controles" style="width: 33px;"></th>
    </tr>
</thead>
<tbody class="scrollContent">
@foreach (var item in Model) {
    <tr>
        <td style="width: 49px;">
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td style="width: 650px;">
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            <a href="@Url.Action("Edit", "UnidadesMedidas", new { id = item.ID })" title="Seleccionar" onclick="window.opener.document.location=this.href; window.close();"><img src="@Url.Content("~/Content/Images/Badge-tick.png")" alt="Seleccionar" width="15" height="15" style="border: 0;" /></a>
        </td>
    </tr>
}
</tbody>
</table>
