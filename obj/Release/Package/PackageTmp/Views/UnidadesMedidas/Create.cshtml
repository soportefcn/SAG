@model SAG2.Models.UnidadMedida

@{
    ViewBag.Title = "Ingresar registro";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
/* Conversion a mayusculas */
input[type="text"], textarea
{
    text-transform: uppercase;
}
</style>
<div id="SAGBox">
    <h3>Unidades de medida</h3>

    <div id="contenido">
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        
        <div class="panel panel-default">
  <div class="panel-heading"><h3><b>Datos de la Unidad de Medida</b></h3></div>
  <div class="panel-body">
      <div class="form-inline" style="margin-bottom: 20px;">
            <div class="form-group" style="margin-right: 25px;">
                @Html.LabelFor(model => model.Descripcion)
            </div>
         
            <div class="form-group">
                <input type="text" value="" name="Descripcion" id="Descripcion" class="form-control">
                @Html.ValidationMessageFor(model => model.Descripcion)
            </div>
    </div> 
       <div class="form-inline">
        <div class="form-group" style="margin-right:63px;">
            @Html.LabelFor(model => model.Unidad)
        </div>
        <div class="form-group">
           <input id="Unidad" class="form-control" type="text" value="" name="Unidad">
            @Html.ValidationMessageFor(model => model.Unidad)
        </div>
          </div>
  </div>
	<div class="panel-footer">
    <div  style ="width: 400px ; display:inline-block">
         <a class="btn btn-success" href="./Index" onclick="window.open(this.href, 'Buscar','width=750,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class ="fa fa-search fa-fw"></span>BUSCAR</a>
             <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/UnidadesMedidas/Create"><span class ="fa fa-file-o  fa-fw"></span>NUEVO</a>
            
        </div>
         <div style="float :right;display:inline-block">
            <input class ="btn btn-primary" type="submit" value="Guardar" />
 </div>

</div>
</div>

      
 @if (TempData["Message"] != null)
{
    @Html.Raw("<script>alert('"+TempData["Message"]+".');</script>");
}
    </fieldset>
}
    </div>
</div>