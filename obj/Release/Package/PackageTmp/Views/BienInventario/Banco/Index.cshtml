@model IEnumerable<SAG2.Models.Banco>
@{
    Layout = "~/Views/Shared/PopUp.cshtml";
    ViewBag.Title = "Bancos";
}

 <div id="contenido_popup">
      <div class="form-group">
          <input type="text" class="form-control" placeholder="Busqueda" id="busqueda" style="width: 300px;">
        </div> 
   <table class ="table table-bordered table-hover">
    <thead class="fixedHeader">
        <tr class="info">
        <th style="width: 49px;" class="codigo">Cód.</th>
        <th style="width: 367px;">Banco</th>
        <th style="width: 33px;" class="controles"></th>
    </tr>
        </thead>
 <tbody class="scrollContent">  
@foreach (var item in Model)
{
    <tr>
        <td style="width: 49px;" align="center">
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td style="width: 367px;">
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td style="width: 33px;">
            <a href="@Url.Action("Edit", "Banco", new { id = item.ID })" title="Seleccionar" onclick="window.opener.document.location=this.href; window.close();"><img src="@Url.Content("~/Content/Images/Badge-tick.png")" alt="Seleccionar" width="15" height="15" style="border: 0;" /></a>
        </td>
    </tr>
}
     </tbody>
        </table>
    </div>