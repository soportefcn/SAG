@model IEnumerable<SAG2.Models.TipoBajaInventario>
@{
	Layout = "~/Views/Shared/PopUp.cshtml";
    ViewBag.Title = "Baja de inventario";
}

 <div id="contenido_popup">
        <table cellpadding="5" border="1" align="center">
        <thead class="fixedHeader">
            <tr>
                <th class="codigo">
                    Cód.
                </th>
                <th>
                    Nombre
                </th>
                <th class="controles"></th>
            </tr>
            </thead>
            <tbody class="scrollContent">
        @foreach (var item in Model) {
            <tr>
                <td class="codigo">
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "TipoBajaInventario", new { id = item.ID })" title="Seleccionar" onclick="window.opener.document.location=this.href; window.close();"><img src="@Url.Content("~/Content/Images/Badge-tick.png")" alt="Seleccionar" width="15" height="15" style="border: 0;" /></a>
                </td>
            </tr>
        }
                </tbody>
        </table>
    </div>