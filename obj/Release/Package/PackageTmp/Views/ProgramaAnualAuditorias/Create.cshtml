@model SAG2.Models.ProgramaAnualAuditorias

@{
    ViewBag.Title = "Ingresar";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
/* Conversion a mayusculas */
input[type="text"], textarea
{
    text-transform: uppercase;
}
</style>
<div id="SAGBox">
<h3>Ingreso</h3>
<div id="controles">
       
    </div>
    <div id="contenido">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="panel panel-default">
  <div class="panel-heading"><h3>Programa Anual de Auditorías</h3></div>
  <div class="panel-body">

      <div class="form-group form-inline">
          <div class="form-group"  style="margin-right: 45px;">
              <label>Programa</label>
          </div>
          <div class="form-group">
              @Html.DropDownList("ProyectoID", String.Empty)
          </div>
      </div>

      <div class="form-group form-inline">
          <div class="form-group"  style="margin-right: 15px;">
              Fecha Estimada
          </div>
          <div class="form-group">
              @Html.TextBox("FechaProgramada", DateTime.Now.ToShortDateString(), new { @class = "calendario form-control", @readonly = "readonly" })
          </div>
      </div>
      <div class="form-group form-inline">
        <div class="form-group"  style="margin-right: 15px;">
            <label>Fecha Informe</label> 
        </div>
        <div class="form-group">
            @Html.TextBox("FechaReal", null, new { @class = "calendario form-control" })
        </div>
          </div>
  </div>
  <div class="panel-footer">
	<div  style ="width: 250px ; display:inline-block">
            <input class="btn btn-primary" type="submit" value="Guardar" />
        </div>
         <div style="float :right;width:500px;display:inline-block">
	        <a class="btn btn-success" href="./Index"><span class ="fa fa-search fa-fw"></span>BUSCAR</a>
            <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/ProgramaAnualAuditorias/Create"><span class ="fa  fa-file-o fa-fw"></span>NUEVO</a>
	</div>

  </div>
</div>

        

        

        <p>
            
        </p>
    </fieldset>
}
</div></div>