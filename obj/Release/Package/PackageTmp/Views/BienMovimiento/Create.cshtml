@model SAG2.Models.BienMovimiento
@{
    ViewBag.Title = "Crear Movimiento";
}

<h2>Crear Movimiento</h2>
@using (Html.BeginForm("Save", "BienMovimiento", FormMethod.Post, new { @class = "form-horizontal" }))
{ 
    <div class="form-group">
        <label for="EstadoID" class="col-sm-2 control-label">Estado</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.EstadoID, new SelectList(ViewBag.listadoestado, "Value", "Text"))
        </div>
    </div>
    <div class="form-group">
        <label for="InventarioID" class="col-sm-2 control-label">Inventario</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.InventarioID, new SelectList(ViewBag.listadoinventario, "Value", "Text"))
        </div>
    </div>
    <div class="form-group">
        <label for="Ubicacion" class="col-sm-2 control-label">Ubicacion:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Ubicacion, new { @class = "form-control", placeholder = "Ingrese Ubicación", required = "required" })
        </div>
    </div>
    <div class="form-group">
        <label for="Descripcion" class="col-sm-2 control-label">Descripción:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", placeholder = "Ingrese Descripción", required = "required" })
        </div>
    </div>
    <div class="form-group">
        <label for="ProyectoID" class="col-sm-2 control-label">Proyecto:</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.ProyectoID, new SelectList(ViewBag.listadoproyecto, "Value", "Text"))
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Guardar</button>
        </div>
    </div>
}