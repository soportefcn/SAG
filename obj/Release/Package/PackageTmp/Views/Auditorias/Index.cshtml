@model IEnumerable<SAG2.Models.Auditoria>
@{
    Layout = "~/Views/Shared/PopUp.cshtml";
    ViewBag.Title = "Auditorías";
}
 <div class="form-group">
          <input type="text" class="form-control" placeholder="Busqueda" id="busqueda" style="width: 300px;">
        </div> 
 <div id="contenido_popup">
   <table cellpadding="5" border="1" align="center">
    <tr>
        <th>
            Fecha
        </th>
        <th>
            Respuesta
        </th>
        <th>
            Observaciones
        </th>
        <th>
            Seguimiento
        </th>
        <th class="controles"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.Raw(item.Fecha.ToShortDateString())
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Respuesta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ObsPendientes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seguimiento)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Auditorias", new { id = item.ID })" title="Seleccionar" onclick="window.opener.document.location=this.href; window.close();"><img src="@Url.Content("~/Content/Images/Badge-tick.png")" alt="Seleccionar" width="15" height="15" style="border: 0;" /></a>
        </td>
    </tr>
}
        </table>
    </div>