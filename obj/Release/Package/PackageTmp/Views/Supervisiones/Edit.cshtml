@model SAG2.Models.Supervision
@{
    ViewBag.Title = "Modificar";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
/* Conversion a mayusculas */
input[type="text"], textarea
{
    text-transform: uppercase;
}
</style>
<div id="SAGBox">
    <h3>Supervisiones</h3>
    <div id="controles">
        <p><a href="../Index" onclick="window.open(this.href, 'Buscar','width=750,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false">BUSCAR</a></p>
        <p>@Html.ActionLink("NUEVO", "Create")</p>
        <p><a href="../Delete/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea borrar este registro?');">ELIMINAR</a></p>
        <p>@Html.ActionLink("CANCELAR", "Create")</p>
    </div>
    <div id="contenido" class="auditorias">
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Modificar supervisión</legend>
        <div class="form-group">
            @Html.LabelFor(model => model.Fecha)
        </div>
        <div class="editor-field">
            @Html.TextBox("Fecha", Model.Fecha.ToShortDateString())
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Respuesta)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Respuesta)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ObsPendientes)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.ObsPendientes)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Seguimiento)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Seguimiento)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}
    </div>
</div>