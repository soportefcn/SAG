@model SAG2.Models.TipoPersonal
@{
    ViewBag.Title = "Modificar";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
/* Conversion a mayusculas */
input[type="text"], textarea
{
    text-transform: uppercase;
}
</style>
<div id="SAGBox">
    <h3>Tipos de personal</h3>
    <div id="controles">
    
    </div>
    <div id="contenido">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
         @Html.HiddenFor(model => model.ID)
   <div class="panel panel-default">
    <div class="panel-heading"><h3>Dato tipo de personal</h3></div>
    <div class="panel-body">
          <div class ="form-group form-inline">
            <div class="form-group" style="margin-right: 30px;">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", style = "width: 400px;" })
          
        </div>
               </div>
    </div>
  <div class="panel-footer">
	<div  style ="width: 500px ; display:inline-block">
         <a  class="btn btn-success"  href="../Index" onclick="window.open(this.href, 'Buscar','width=750,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class ="fa fa-search fa-fw"></span>BUSCAR</a>
            <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/TipoPersonal/Create"><span class ="fa fa-file-o  fa-fw"></span>NUEVO</a>
            <a class="btn btn-danger" href="../Delete/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea borrar este registro?');"><span class ="fa fa-trash-o fa-fw"></span>ELIMINAR</a>
           <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/TipoPersonal/Create"><span class ="fa fa-undo fa-fw"></span>CANCELAR</a>
            
        </div>
         <div style="float :right;display:inline-block">
	        <input class="btn btn-primary" type="submit" value="Guardar" />
	</div>

    </div>
   </div> 

    </fieldset>
}
    </div>
</div>