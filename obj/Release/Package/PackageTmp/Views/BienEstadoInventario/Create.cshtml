@model SAG2.Models.BienEstadoInventario
@{
    ViewBag.Title = "Crear Estado Inventario";
}

<h2>Crear Estado Inventario</h2>
@using (Html.BeginForm("Save", "BienEstadoInventario", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <label for="nombre" class="col-sm-2 control-label">Nombre Estado Inventario:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Ingrese Nombre Estado", required = "required" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Guardar</button>
        </div>
    </div>
}
