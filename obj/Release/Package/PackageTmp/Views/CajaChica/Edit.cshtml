@model SAG2.Models.FondoFijo
@{
    ViewBag.Title = "Modificar";
    var Periodo = (int)Session["Periodo"];
    var Mes = (int)Session["Mes"];
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
/* Conversion a mayusculas */
input[type="text"], textarea
{
    text-transform: uppercase;
}
</style>
<div id="SAGBox">
    <h3>Caja chica</h3>
    
    <div id="contenido" class="cuentacorriente">
  @using (Html.BeginForm())
{
        <div class="panel panel-default">
  <div class="panel-heading"><h3><b>Caja Chica</b></h3></div>
  <div class="panel-body">

    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.Periodo)
    @Html.HiddenFor(model => model.Mes)
    @Html.HiddenFor(model => model.ProyectoID)
    <input type="hidden" name="CajaChica" id="CajaChica" value="CajaChica" />
    <fieldset>
       <div class ="form-group form-inline">
      <div class="form-group" style="margin-right: 30px;">
            <label>Caja Chica</label> 
        </div>
        <div class="form-group">
            <input type="hidden" id="FondoFijoGrupoID" name="FondoFijoGrupoID" value="@ViewBag.FondoFijoGrupoID" />
            <input class="form-control" type="text" value="@ViewBag.NombreFondoFijo" readonly="readonly" style="background-color: #CCC;" />
        </div>
           </div>

        <div class ="form-group form-inline">
            <div class="form-group" style="margin-right: 10px;">
                @Html.LabelFor(model => model.NumeroDocumento)
             </div>
            <div class="form-group" style="margin-right: 300px;">
                @Html.TextBoxFor(model => model.NumeroDocumento, new { @class = "form-control" })
            </div>
                <div class="form-group">
            @Html.LabelFor(model => model.Fecha)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Fecha, new { @Value = Model.Fecha.ToShortDateString(), @readonly = "readonly", @class = "calendario form-control" })
        </div>
            </div>

         <div class ="form-group form-inline">
            <div class="form-group" style="margin-right: 45px;">
           <label>Cuenta</label>
        </div>
        <div class="form-group">
            <select id="CuentaID" name="CuentaID" class="form-control">
                @Html.Raw(ViewBag.Arbol)
            </select>
        </div>
             </div>
        <div class ="form-group form-inline">
        <div class="form-group" style="margin-right: 45px;">
            @Html.LabelFor(model => model.Monto)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Monto, new { @class = "form-control" })
        </div>
            </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Glosa)
        </div>
        <div class="form-group">
            @Html.TextAreaFor(model => model.Glosa, new { @class="form-control" })
        </div>
        <p>
            
        </p>
 </fieldset>
  </div>
  <div class="panel-footer">
	<div  style ="width: 500px ; display:inline-block">
        <a class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Buscar" href="../Index?Grupo=@ViewBag.FondoFijoGrupoID" onclick="window.open(this.href, 'Buscar','width=750,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class ="fa fa-search fa-lg"></span></a>
          <a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Nuevo" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/CajaChica/Create?Grupo=@ViewBag.FondoFijoGrupoID"><span class ="fa fa-file-o  fa-lg"></span></a>
        <a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Imprimir" href="../../Imprimir/InformeFondoFijo?Grupo=@ViewBag.FondoFijoGrupoID" class="imprimirInformeMes"><span class ="fa fa-print fa-lg"></span></a>
        <!--<a href="./Index" id="Guardar">GUARDAR</a></p> -->
        <a class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Eliminar" href="../Delete/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea borrar este registro?');"><span class ="fa fa-trash-o fa-lg"></span></a>
        <a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Cancelar" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/CajaChica/Create?Grupo=@ViewBag.FondoFijoGrupoID"><span class ="fa fa-undo fa-lg"></span></a>
          
        
        </div>
        <div style="float :right;display:inline-block">
	      <input class="btn btn-primary" type="submit" value="Guardar" id="botonGuardar" class="validarCuenta" />  
	</div>

  </div>
            </div>
     
  
}
  </div>     


    
</div>