@model IEnumerable<SAG2.Models.Informe>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
       <a class="btn btn-success" ahref=@Html.ActionLink("Nuevo", "Create") </a> 
    </p>
    <table class="table">
        <tr>
            <th>
               <label>Tipo de Reporte</label>
            </th>
            <th>
               <label>Nombre</label> )
            </th>
            <th>
               <label>Estado</label> 
            </th>
            <th>
               <label>Descripcion</label>
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model.Where(p => p.estado == 0)) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tipo.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreInforme)
            </td>
            <td>
                @if (item.estado == 0)
                {
                    @Html.Raw("Activo");
                } else {@Html.Raw("Inactivo")}
                    </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar y agregar líneas", "Edit", new { id = item.ID }, new { @class="btn btn-default" })
                 @Html.ActionLink("Eliminar", "Delete", new { id=item.ID }, new { @class="btn btn-danger" })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
