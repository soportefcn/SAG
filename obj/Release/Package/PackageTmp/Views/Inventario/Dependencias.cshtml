@model IEnumerable<SAG2.Models.Dependencia>
@{
    ViewBag.Title = "Dependencias";
}
<div class="permisos">
    <h2>Seleccione dependencia para ver Hoja de Inventario</h2>
    @if (@Model.Count() == 0)
    {
        @Html.Raw("No existen dependencias para este Proyecto.");
    }
    else
    {
        int i = 0;
    <table cellpadding="5" border="0" align="center" style="width: 100%;">
        <tr>
            <th style="width: 10px;"></th>
            <th>Dependencia</th>
            <th style="width: 80px;">N° Especies</th>
            <th style="width: 30px;"></th>
        </tr>
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td align="right">@i</td>
                <td>@item.Nombre</td>
                <td align="center">@item.Items.Count</td>
                <td><input type="button" value="VER" onclick="window.location='./Hoja?dependenciaID=@item.ID';return false;" /> </td>
            </tr>
        }
    </table>
    }
</div>