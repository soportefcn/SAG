@model SAG2.Models.EstadoIntervencion
@{
    ViewBag.Title = "Modificar";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
    /* Conversion a mayusculas */
    input[type="text"], textarea {
        text-transform: uppercase;
    }
</style>
<div id="SAGBox">
    <h3>Estado Intervencion</h3>
    <div id="controles">
    </div>
    <div id="contenido" class="cuentacorriente">

        @using (Html.BeginForm("Update", "EstadoIntervencion", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ID)

            <fieldset>

                <div class="panel panel-default">
                    <div class="panel-heading"><h3><b>Datos de Estado</b></h3></div>
                    <div class="panel-body">

                        <div class="form-group form-inline">
                            <div class="form-group" style="margin-right: 10px;">
                                <strong>Cód</strong>
                            </div>
                            <div class="form-group" style="margin-right: 350px;">
                                <input class="form-control" type="text" readonly="readonly" value="@Model.ID" size="@Model.ID.ToString().Length" />
                            </div>


                            <div class="form-group" style="margin-right: 10px;">
                                @Html.LabelFor(model => model.Nombre)
                            </div>

                            <div class="form-group">

                                @Html.EditorFor(model => model.Nombre)
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div style="width: 500px ; display:inline-block">
                            <a class="btn btn-success" href="../Index" onclick="window.open(this.href, 'Buscar','width=750,height=350,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class="fa fa-search fa-fw"></span>BUSCAR</a>
                            <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/EstadoIntervencion/Create"><span class="fa fa-file-o  fa-fw"></span>NUEVO</a>
                            <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/EstadoIntervencion/Create"><span class="fa fa-undo fa-fw"></span> CANCELAR</a>
                        </div>
                        <div style="float :right;width:100px;display:inline-block">
                            <input class="btn btn-primary" type="submit" value="Guardar" />
                        </div>

                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>
