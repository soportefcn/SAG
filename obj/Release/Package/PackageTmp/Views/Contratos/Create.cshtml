@model SAG2.Models.Contrato
@{
    ViewBag.Title = "Ingresar registro";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
/* Conversion a mayusculas */
input[type="text"], textarea
{
    text-transform: uppercase;
}
</style>
<div id="SAGBox">
    <h3>Contratos</h3>
    <div id="controles">
    
    </div>
    <div id="contenido">
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="panel panel-default">
  <div class="panel-heading"><h3>Dato de contrato</h3></div>
  <div class="panel-body">
        <div class="form-group form-inline">
            <div class="form-group" style="margin-right: 30px;">
                @Html.LabelFor(model => model.ServicioID, "Servicio")
            </div>
            <div class="form-group">
                @Html.DropDownList("ServicioID", null, "-- SELECCIONE UN SERVICIO --", new { @class = "form-control"} )
            </div>
        </div>
         <div class="form-group form-inline">
        <div class="form-group" style="margin-right: 30px;">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="form-group">
           <input class="form-control" type="text" value="" name="Nombre" id="Nombre" data-val-required="The Nombre field is required." data-val-length-max="100" data-val-length="The field Nombre must be a string with a maximum length of 100." data-val="true">
        </div>
        </div>
         <div class="form-group form-inline">
        <div class="form-group" style="margin-right: 34px;">
            @Html.LabelFor(model => model.Monto)
        </div>
        <div class="form-group">
           <input class="form-control" type="text" value="" name="Monto" id="Monto" data-val-required="The Monto field is required." data-val-number="The field Monto must be a number." data-val="true">
            <select name="Moneda" id="Moneda" class="form-control">
                <option value="Pesos" selected="selected">Pesos</option>
                <option value="UF">UF</option>
            </select>
        </div>
        </div>
        
        <div class="form-group" style="margin-right: 30px;">
            @Html.LabelFor(model => model.Comentario)
        </div>
        <div class="form-group">
            <textarea class="form-control" rows="2" name="Comentario" id="Comentario" cols="20"></textarea>
        </div>
           
  </div>
  <div class="panel-footer">
	<div  style ="width: 500px ; display:inline-block">
          <a class="btn btn-success" href="./Index" onclick="window.open(this.href, 'Buscar','width=770,height=350,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class ="fa fa-search fa-fw"></span>BUSCAR</a>
        <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Contratos/Create"><span class ="fa fa-file-o  fa-fw"></span>NUEVO</a>
        </div>
         <div style="float :right;display:inline-block">
	    
	 <input class="btn btn-primary" type="submit" value="Guardar" />
         </div>

  </div>
</div>

    @if (TempData["Message"] != null)
{
    @Html.Raw("<script>alert('"+TempData["Message"]+".');</script>");

}

        </fieldset>
}
    </div>
</div>
