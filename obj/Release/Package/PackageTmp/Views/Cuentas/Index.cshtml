@model IEnumerable<SAG2.Models.Cuenta>
@{
    Layout = "~/Views/Shared/PopUp.cshtml";
    ViewBag.Title = "Cuentas";
}
 <div class="form-group">
          <input type="text" class="form-control" placeholder="Busqueda" id="busqueda" style="width: 300px;">
        </div> 
<div id="contenido_popup">
    <table class ="table table-bordered table-hover">
        <thead class="fixedHeader">
        <tr class ="info">
            <th style="width: 625px;">Cuenta</th>
            <th style="width: 100px;"></th>
        </tr>
            </thead>
 <tbody class="scrollContent">  
@foreach (var item in Model)
{
        <tr title="@item.Descripcion">
            <td style="width: 625px;">@Html.DisplayFor(modelItem => item.Codigo) @Html.DisplayFor(modelItem => item.Nombre)</td>
            <td style="width: 100px;">
                <a href="@Url.Action("Subir", "Cuentas", new { id = item.ID })" title="Subir"><img src="@Url.Content("~/Content/Images/arriba.png")" alt="Arriba" width="15" height="15" style="border: 0;" /></a>
                <a href="@Url.Action("Bajar", "Cuentas", new { id = item.ID })" title="Bajar"><img src="@Url.Content("~/Content/Images/abajo.png")" alt="Abajo" width="15" height="15" style="border: 0;" /></a>
                <a href="@Url.Action("Edit", "Cuentas", new { id = item.ID })" title="Seleccionar" onclick="window.opener.document.location=this.href; window.close();"><img src="@Url.Content("~/Content/Images/Badge-tick.png")" alt="Seleccionar" width="15" height="15" style="border: 0;" /></a>
            </td>
        </tr>
}
     </tbody>
    </table>
</div>