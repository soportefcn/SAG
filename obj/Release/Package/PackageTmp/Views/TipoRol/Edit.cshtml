@model SAG2.Models.TipoRol

@{
    ViewBag.Title = "Roles";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id="SAGBox">
    <h3>Roles</h3>
    <div id="contenido">

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
    <div class="panel panel-default">
        <div class="panel-heading"><h3><b>Roles</b></h3></div>
        <div class="panel-body">
        

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nombre)
            @Html.ValidationMessageFor(model => model.Nombre)
        </div>
    </div>
             <div class="panel-footer">
            <div  style ="width: 500px ; display:inline-block">
                <a class="btn btn-success" href="../Index" onclick="window.open(this.href, 'Buscar','width=750,height=350,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class ="fa fa-search fa-fw"></span>BUSCAR</a>
                <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/TipoRol/Create"><span class ="fa fa-file-o  fa-fw"></span>NUEVO</a>
                <a class="btn btn-danger" href="../Delete/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea borrar este registro?');"><span class ="fa fa-trash-o fa-fw"></span>ELIMINAR</a>
                <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/TipoRol/Create"><span class ="fa fa-undo fa-fw"></span> CANCELAR</a>           
            </div>
            <div style="float :right;width:150px;display:inline-block">
                <input class="btn btn-primary" type="submit" value="Guardar" />
            </div>
       </div> 

 </div>

         @if (TempData["Message"] != null)
        {
            @Html.Raw("<script>alert('"+TempData["Message"]+".');</script>");
        }
      
    </fieldset>
}


</div>

</div>