@{
    ViewBag.Title = " Asociar Cuenta";
}

@model SAG2.Models.CInformeCierre 
@{
    ViewBag.Title = "Modificar";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
/* Conversion a mayusculas */
input[type="text"], textarea
{
    text-transform: uppercase;
}
</style>
<div id="SAGBox">
    <h3>Asociar cuenta</h3>
    <div id="controles">
  
    </div>
    <div id="contenido">
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ID)
    <fieldset>

        <div class="panel panel-default">
  <div class="panel-heading"><h3><b>Datos de Asociar cuenta</b></h3></div>
  <div class="panel-body">
     

      <br />
      <div class="form-inline" style="margin-bottom: 20px;">
        <div class="form-group" style="margin-right: 44px;">
           <label>Categoria</label>
        </div>
        <div class="form-group">
           @Html.DropDownList("GinformeID", null, "-- SELECCIONE UNA CATEGORIA --", new { @class = "form-control"} )         
        </div>
          </div>
     
      <div class="form-inline" style="margin-bottom: 20px;">
        <div class="form-group" style="margin-right: 15px;">
            <label>Cuenta</label>
        </div>
        <div class="form-group">
            @Html.DropDownList("CuentaID", null, "-- SELECIONE UNA UNIDAD/MEDIDA --", new { @class = "form-control"} )
         
        </div>
      </div>
       <div class="form-inline" style="margin-bottom: 20px;">
      <div class="form-group">
         <label>Sumatoria Ingreso</label> 
        <select id="CTotal" name="CTotal" class="form-control" style="width: 85px;">
                @if ( Model.CTotal == 0)
                {
                    <option selected="selected" value="0">NO</option>
                    <option value="1">SI</option>
                    
                }
                else
                {
                   <option  value="0">NO</option>
                    <option selected="selected" value="1">SI</option>
                }
               

            </select>
      </div> </div> 
       <div class="form-inline" style="margin-bottom: 20px;">
        <div class="form-group">
         <label>Rojo al tener Valor</label> 
        <select id="valor" name="valor" class="form-control" style="width: 85px;">
                @if (Model.valor == 0)
                {
                    <option selected="selected" value="0">NO</option>
                    <option value="1">SI</option>
                    
                }
                else
                {
                   <option  value="0">NO</option>
                    <option selected="selected" value="1">SI</option>
                }

            </select>
      </div></div>
          <div class="form-inline" style="margin-bottom: 20px;">
        <div class="form-group">
         <label>Tipo de Comprobante</label> 
        <select id="tipoComprobante" name="tipoComprobante" class="form-control" style="width: 200px;">
                @if (Model.tipoComprobante == 0)
                {
                    <option selected="selected" value="0">Por formula</option>
                    <option value="1">Reintegro</option>
                    <option value="2">Egreso </option>
                    
                }
                @if (Model.tipoComprobante == 1)
                {
                     <option  value="0">Por formula</option>
                    <option selected="selected" value="1">Reintegro</option>
                    <option  value="2">Egreso </option>
                }
               @if (Model.tipoComprobante == 2)
                {
                     <option  value="0">Por formula</option>
                    <option value="1">Reintegro</option>
                    <option selected="selected" value="2">Egreso </option>
                }
            </select>
      </div></div>
     
  </div>
	<div class="panel-footer">
    <div  style ="width: 500px ; display:inline-block">
             <a class="btn btn-success" href="../Lista" onclick="window.open(this.href, 'Buscar','width=750,height=350,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class ="fa fa-search fa-fw"></span>BUSCAR</a>
        <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/SaldoCierre/AsociarCuenta"><span class ="fa fa-file-o  fa-fw"></span>NUEVO</a>
        <a class="btn btn-danger" href="../Delete/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea borrar este registro?');"><span class ="fa fa-trash-o fa-fw"></span>ELIMINAR</a>
        <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/SaldoCierre/AsociarCuenta"><span class ="fa fa-undo fa-fw"></span> CANCELAR</a>
            
        </div>
         <div style="float :right;width:150px;display:inline-block">
 <input class="btn btn-primary" type="submit" value="Guardar" />
 </div>

</div>
</div>
          
    </fieldset>
}
    </div>
</div>
