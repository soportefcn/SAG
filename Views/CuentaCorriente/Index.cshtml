@model IEnumerable<SAG2.Models.CuentaCorriente>
@{
	Layout = "~/Views/Shared/PopUp.cshtml";
    ViewBag.Title = "Cuentas corrientes";
}
 <div class="form-group">
          <input type="text" class="form-control" placeholder="Busqueda" id="busqueda" style="width: 300px;">
        </div> 
 <div id="contenido_popup">
        <table class ="table table-bordered table-hover">
    <thead class="fixedHeader">
    <tr class="info">
        <th style="width: 200px;">
            Nº Cuenta
        </th>
        <th style="width: 170px;">
            Banco
        </th>
        <th style="width: 90px;">
            Sucursal
        </th>
        <th style="width: 33px;" class="controles"></th>
    </tr>
        </thead>
 <tbody class="scrollContent">  
@foreach (var item in Model)
{
    <tr>
        <td  style="width: 200px;">
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        <td  style="width: 170px;">
            @Html.DisplayFor(modelItem => item.Banco.Nombre)
        </td>
        <td  style="width: 90px;">
            @Html.DisplayFor(modelItem => item.Sucursal)
        </td>    
        <td  style="width: 33px;">
            <a href="@Url.Action("Edit", "CuentaCorriente", new { id = item.ID })" title="Seleccionar" onclick="window.opener.document.location=this.href; window.close();"><img src="@Url.Content("~/Content/Images/Badge-tick.png")" alt="Seleccionar" width="15" height="15" style="border: 0;" /></a>
        </td>
    </tr>
}
     </tbody>
        </table>
    </div>