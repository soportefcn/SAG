@model SAG2.Models.ProgramaAnualAuditorias

@{
    ViewBag.Title = "Modificar";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
/* Conversion a mayusculas */
input[type="text"], textarea
{
    text-transform: uppercase;
}
</style>
<div id="SAGBox">
<h3>Modificación</h3>
<div id="controles">
        <p><a href="../Index">BUSCAR</a></p>
        <p>@Html.ActionLink("NUEVO", "Create")</p>
    </div>
    <div id="contenido">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Numero)
    @Html.HiddenFor(model => model.ID)
    <fieldset>
        <legend>Programa Anual de Auditorías</legend>
        <div class="form-group">
            @Html.LabelFor(model => model.ProyectoID, "Proyecto")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ProyectoID", String.Empty)
        </div>

        <div class="form-group">
            Fecha Estimada
        </div>
        <div class="editor-field">
            @Html.TextBox("FechaProgramada", Model.FechaProgramada.ToShortDateString(), new { @class = "calendario", @readonly = "readonly" })
        </div>

        <div class="form-group">
            Fecha Auditoría
        </div>
        <div class="editor-field">
            @if (Model.FechaReal != null)
            {
                @Html.TextBox("FechaReal", Model.FechaReal.Value.ToShortDateString(), new { @class = "calendario" });
            }
            else
            {
                @Html.TextBox("FechaReal", null, new { @class = "calendario" });
            }
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}
</div></div>