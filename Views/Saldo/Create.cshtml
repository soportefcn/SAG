@model SAG2.Models.Saldo
@{
    ViewBag.Title = "Actualizar saldo";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
/* Conversion a mayusculas */
input[type="text"], textarea
{
    text-transform: uppercase;
}
</style>
<div id="SAGBox">
    <h3>Actualizar saldo</h3>
    <div id="controles">
        <p>@Html.ActionLink("ACTUALIZAR", "Create",null,new{@style="font-size:10px;"})</p>
        <p>@Html.ActionLink("SALDOS", "Index")</p>
    </div>
    <div id="contenido">
@Html.Raw(@ViewBag.Mensaje)
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group">
            @Html.LabelFor(model => model.CuentaCorrienteID, "Cuenta Corriente")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CuentaCorrienteID", String.Empty)
            @Html.ValidationMessageFor(model => model.CuentaCorrienteID)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Periodo)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Periodo)
            @Html.ValidationMessageFor(model => model.Periodo)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SaldoInicialCartola, "Saldo inicial") $
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.SaldoInicialCartola)
            @Html.ValidationMessageFor(model => model.SaldoInicialCartola)
        </div>

        <p>
            <input type="submit" value="Iniciar" />
        </p>
    </fieldset>
}
    </div>
</div>