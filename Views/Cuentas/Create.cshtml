@model SAG2.Models.Cuenta

@{
    ViewBag.Title = "Ingresar registro";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
/* Conversion a mayusculas */
input[type="text"], textarea
{
    text-transform: uppercase;
}
</style>
<div id="SAGBox">
    <h3>Cuentas</h3>
    <div id="controles">
        
    </div>
    <div id="contenido" class="cuentacorriente">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
       <div class="panel panel-default">
  <div class="panel-heading"><h3>Dato de Cuenta </h3></div>
  <div class="panel-body">
       <div class="form-group form-inline">
        <div class="form-group" style="margin-right: 64px;">
            @Html.LabelFor(model => model.Padre)
        </div>
        <div class="form-group">
            @Html.DropDownList("CuentaID", null, "-- SELECCIONE UN PADRE --", new { @class = "form-control"} )
           
        </div>
           </div>
        <div class="form-group form-inline">
        <div class="form-group" style="margin-right: 53px;">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="form-group">
           <input class="form-control" type="text" value="" name="Nombre" id="Nombre" data-val-length-max="100" data-val-length="The field Nombre must be a string with a maximum length of 100." data-val="true" class="text-box single-line">
        </div>
            </div>
        <div class="form-group form-inline">
        <div class="form-group" style="margin-right: 60px;">
            @Html.LabelFor(model => model.Codigo, "Código")
        </div>
        <div class="form-group" style="margin-right: 10px;">
           <input style="width: 120px;" class="form-control" type="text" value="" name="Codigo" id="Codigo" data-val-length-max="10" data-val-length="The field Codigo must be a string with a maximum length of 10." data-val="true" class="text-box single-line">
        </div>
            
        <div class="form-group" style="margin-right: 15px;">
            @Html.LabelFor(model => model.CodigoTranstecnia, "Cód. Transtecnia")
        </div>
        <div class="form-group">
           <input style="width: 120px;" class="form-control" id="CodigoTranstecnia" class="text-box single-line" type="text" value="" name="CodigoTranstecnia" data-val-length-max="10" data-val-length="The field CodigoTranstecnia must be a string with a maximum length of 10." data-val="true">
        </div>
            <div class="form-group" style="margin-right: 10px;">
            <label>Sename Uso</label>
            </div>
            <div class="form-group">@Html.DropDownList("SenameUso", String.Empty)</div>
              
            </div>
                <div class="form-group form-inline">
        <div class="form-group" style="margin-right: 53px;">
            @Html.LabelFor(model => model.resumen)
        </div>
        <div class="form-group">
           <input class="form-control" type="text" value="" name="resumen" id="resumen" data-val-length-max="100" data-val-length="The field Nombre must be a string with a maximum length of 100." data-val="true" class="text-box single-line">
        </div>
          <div class="form-group" style="margin-right: 53px;">
            @Html.LabelFor(model => model.indicador)
        </div>
        <div class="form-group">
           <input class="form-control" type="text" value="" name="indicador" id="indicador" data-val-length-max="100" data-val-length="The field Nombre must be a string with a maximum length of 100." data-val="true" class="text-box single-line">
        </div>
            </div>
        <div class="form-group" style="margin-right: 30px;">
            @Html.LabelFor(model => model.Descripcion, "Descripción")
        </div>
        <div class="form-group">
           <textarea class="form-control" rows="2" name="Descripcion" id="Descripcion" cols="20"></textarea>
        </div>
            
  </div>
  <div class="panel-footer">
	    <div  style ="width: 500px ; display:inline-block">
             <a class="btn btn-success" href="./Index" onclick="window.open(this.href, 'Buscar','width=750,height=350,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class ="fa fa-search fa-fw"></span>BUSCAR</a>
            <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Cuentas/Create"><span class ="fa fa-file-o  fa-fw"></span>NUEVO</a>
             <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Cuentas/CuentasPresupuesto"><span class ="fa fa-bars  fa-fw"></span>Presupuesto</a>
        </div>
         <div style="float :right;display:inline-block">
          <input class="btn btn-primary" type="submit" value="Guardar" />
	       
	</div>

  </div>
</div>
       
@if (TempData["Message"] != null)
{
    @Html.Raw("<script>alert('"+TempData["Message"]+".');</script>");
}  
    </fieldset>
}
    </div>
</div>