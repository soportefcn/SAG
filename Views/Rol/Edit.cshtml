    @model SAG2.Models.Rol

@{
    ViewBag.Title = "Modificar";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
/* Conversion a mayusculas */
input[type="text"], textarea
{
    text-transform: uppercase;
}
</style>
<div id="SAGBox">
    <h3>Roles de usuario</h3>
 
    <div id="contenido">
@using (Html.BeginForm()) {
   
    <fieldset>
        @Html.HiddenFor(model => model.ID)
         @Html.HiddenFor(model => model.Correo)


  <div class="panel panel-default">
  <div class="panel-heading"><h3>Dato de rol</h3></div>
  <div class="panel-body">
       <div class="form-group form-inline">
            <div class="form-group" style="margin-right: 30px;">
            @Html.LabelFor(model => model.PersonaID, "Persona")
        </div>
        <div class="form-group">
            @Html.DropDownList("PersonaID", null, new { @class = "form-control"})
        </div>
          </div>
        <div class="form-group form-inline">
            <div class="form-group" style="margin-right: 56px;">
            @Html.LabelFor(model => model.TipoRolID, "Rol")
        </div>
        <div class="form-group">
            @Html.DropDownList("TipoRolID", null, new { @class = "form-control"})
        </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Comentarios)
        </div>
        <div form-group>
            @Html.TextAreaFor(model => model.Comentarios, new { @class = "form-control"})
            @Html.ValidationMessageFor(model => model.Comentarios)
                      <style type="text/css">
        #Comentarios { 
            width: 788px; height: 61px;
        }
          </style>
           
        </div>

       @Html.ValidationSummary(true)
  </div>
	<div class="panel-footer">
    <div  style ="width: 500px ; display:inline-block">
         <a class="btn btn-success" href="../Index" onclick="window.open(this.href, 'Buscar','width=750,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class ="fa fa-search fa-fw"></span>BUSCAR</a>
      <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Rol/Create"><span class ="fa fa-file-o  fa-fw"></span>NUEVO</a>
        <a class="btn btn-danger" href="../Delete/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea borrar este registro?');"><span class ="fa fa-trash-o fa-fw"></span>ELIMINAR</a>
       <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Rol/Create"><span class ="fa fa-undo fa-fw"></span>CANCELAR</a>

             
        </div>
         <div style="float :right;display:inline-block">
           <input class="btn btn-primary" type="submit" value="Guardar" />   
   
 </div>

</div>
</div>

 
    </fieldset>
}
    </div>
</div>