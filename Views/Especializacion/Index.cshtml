@model IEnumerable<SAG2.Models.Especializacion>
@{
	Layout = "~/Views/Shared/PopUp.cshtml";
    ViewBag.Title = "Especialidades";
}

 <div id="contenido_popup">
        <table cellpadding="5" border="1" align="center">
    <tr>
        <th>
            Profesión
        </th>
        <th>
            Especialidad
        </th>
        <th class="controles"></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Profesion.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
                    <a href="@Url.Action("Edit", "Especializacion", new { id = item.ID })" title="Seleccionar" onclick="window.opener.document.location=this.href; window.close();"><img src="@Url.Content("~/Content/Images/Badge-tick.png")" alt="Seleccionar" width="15" height="15" style="border: 0;" /></a>
                </td>
            </tr>
        }
        </table>
    </div>