@model SAG2.Models.Resolucion

@{
    Layout = "~/Views/Shared/Entrada.cshtml";
    ViewBag.Title = "Ingreso Resolucion";
    SAG2.Models.Usuario Usuario = (SAG2.Models.Usuario)Session["Usuario"];
}



<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

 <div style="margin: 30px auto; border: 1px solid #DDDDDD; width: 700px; border-radius: 5px;  padding: 8px; background:white; box-shadow: 2px 2px 5px #D8D8D8;">

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
       

           <div class="panel panel-default">
  <div class="panel-heading"><h3><b> Resolución</b></h3></div>
  <div class="panel-body">

           <div class="form-inline">
           <div class="form-inline">
               <div class="form-group" style="margin-right: 90px; margin-left: 7px;"> 
                    <label>Tipo Resolución</label><br />
                <select id="tipo" name="tipo" class="form-control">
                <option value="PorConvenio">Convenio</option>
                <option value="PorProrroga">Prorroga</option>
                <option value="PorUrgencia">Urgencia</option>
               
            </select></div>
        <div class="form-group" >
           <label>N° Resolucion</label>
            <br />
            @Html.EditorFor(model => model.ResEx)
            @Html.ValidationMessageFor(model => model.ResEx)
        </div>
      
         <div class="form-group">
            <label>N° Plazas</label>
    <br />
            @Html.EditorFor(model => model.NroPlazas)
            @Html.ValidationMessageFor(model => model.NroPlazas)
        </div>
        </div>
        <div class="form-inline" style="margin-top: 10px;">
        <div class="form-group" style="margin-left: 7px;">
            <label>Fecha Inicio</label>
            <br />
            @Html.TextBoxFor(model => model.FechaInicio, new { @class = "calendario form-control"})
       
        </div>

        <div class="form-group">
         <label>Fecha Termino</label>
            <br />
             @Html.TextBoxFor(model => model.FechaTermino, new { @class = "calendario form-control"})

        </div>
   @if (Usuario.esAdministrador)
   {
               <div class="form-group">
         <label>Fecha Prorroga</label>
            <br />
             @Html.TextBoxFor(model => model.FechaProrroga , new { @class = "calendario form-control"})

        </div>

   }

        </div>


        <div class="form-group" style="margin-top: 10px;margin-left: 7px;">
           <label>Comentarios</label>
            <br />
              <textarea class="form-control" cols="20" id="Comentarios" name="Comentarios" rows="2" style="width: 523px; height: 74px;"></textarea>

        </div>
</div></div>
                 <div class="panel-footer">

      
           <input class="btn btn-primary" type="submit" value="Guardar"  />  


  </div>
           </div>
         @if (TempData["Message"] != null)
{
    @Html.Raw("<script>alert('"+TempData["Message"]+".');</script>");
}
    </fieldset>
}


</div>