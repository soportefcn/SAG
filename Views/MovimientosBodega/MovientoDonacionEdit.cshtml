@model SAG2.Models.MovimientosBodega

@{
    ViewBag.Title = "MovientoEntradaEdit";
}



<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
/* Conversion a mayusculas */
input[type="text"], textarea
{
    text-transform: uppercase;
}
</style>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        
          <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Movimiento de Donación</h3>
  </div>
  <div class="panel-body">
      <div class="form-group form-inline">
        
     
    <h3>Articulo</h3>
      <div class="form-group form-inline">
          <div class="form-group">
           <label>Artículo</label>
        </div>
            <div class="form-group" style="margin-right: 10px;">
              <select name="ArticuloID" id="ArticuloID" class="form-control" >
            <option value="-1"> - Seleccione proyecto</option>
             @foreach (SAG2.Models.Articulo art2 in ViewBag.Articulos)
            {
                if (@Model.ArticuloID == art2.ID)
                {
                    <option selected="selected" value="@Model.ArticuloID">@Model.Articulo.Nombre </option>
                }
                else
                {
                    <option value="@art2.ID">@art2.Nombre</option>
                }
            }
        </select>
            </div>

          <div class="form-group">
           <label>Cantidad</label>
        </div>
          <div class="form-group">    @Html.TextBoxFor(model =>  model.Entrada   , new {   style ="width:200px;" })</div> 
            
  </div>

        
        <div class="editor-label">
            @Html.LabelFor(model => model.Observaciones)
        </div>
        <div class="editor-field">
           @Html.TextArea("Observaciones", new { @class = "form-control", @value = Model.Observaciones, style ="width:200px;"  })
        </div>

        
       
  </div> </div>
      	<div class="panel-footer">
    <div  style ="width: 500px ; display:inline-block">
             <a class="btn btn-success" href="../ListarDonaciones" onclick="window.open(this.href, 'Buscar','width=750,height=350,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class ="fa fa-search fa-fw"></span>BUSCAR</a>
        <a class="btn btn-default" href="/SAG_5_desarrollo/MovimientosBodega/MovimientoDonacion"><span class ="fa fa-file-o  fa-fw"></span>NUEVO</a>
        <a class="btn btn-danger" href="../Delete/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea borrar este registro?');"><span class ="fa fa-trash-o fa-fw"></span>ELIMINAR</a>
        <a class="btn btn-default" href="/SAG_5_desarrollo/MovimientosBodega/MovimientoDonacion"><span class ="fa fa-undo fa-fw"></span> CANCELAR</a>
            
        </div>
         <div style="float :right;width:150px;display:inline-block">
 <input class="btn btn-primary" type="submit" value="Guardar" />
 </div>

</div>

            
    </fieldset>
}
  @if (TempData["Message"] != null)
    {
        @Html.Raw("<script>alert('" + TempData["Message"] + ".');</script>");
    }

