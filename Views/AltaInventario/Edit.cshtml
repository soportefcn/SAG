@model SAG2.Models.Inventario

@{
    ViewBag.Title = "Edit";
    int deta = 0;
}



<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<h2>Alta Inventario</h2>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
      

        @Html.HiddenFor(model => model.ID)


        <div class="panel panel-default">
  <div class="panel-heading"><h3><b> Datos del Alta </b></h3></div>
  <div class="panel-body">
       <div class="form-inline">
        <div class="form-group"  style="margin-right: 50px;">
            @Html.LabelFor(model => model.Numero)
        </div>
        <div class="form-group" style="margin-right: 200px;">
            @Html.TextBoxFor(model => model.Numero, new { @class = " form-control" , @readonly="readonly", style="width: 90px;"  } )
            @Html.ValidationMessageFor(model => model.Numero)
        </div>
        <div class="form-group" style="margin-right: 30px;">
              @Html.LabelFor(model => model.Fecha)
         </div>
          <div class="form-group" >
               @Html.EditorFor(model => model.Fecha)
            @Html.ValidationMessageFor(model => model.Fecha)
            </div>    
        </div>
      <br />  <br />
      <div class="form-inline">
          <div class="form-group"><label>Nº Egreso</label></div>
          
              @if (ViewBag.detalle == 0){
            <img id="BuscarEgresoID" src="@Url.Content("~/Content/Images/Buscar2.png")" alt="Buscar" title="Buscar" style="cursor: pointer; vertical-align: middle;margin-right: 30px;" />
          }
          
          <div class="form-group"  style="margin-right: 30px;">
             <input id="EgresoAlta" type="text" size="3" readonly="readonly" name="EgresoAlta" value= @Model.Movimiento.NumeroComprobante>
            <input id="MovimientoID" type="hidden" value=@Model.MovimientoID name ="MovimientoID" >
       </div>
        <div class="form-group" style="margin-right: 30px;"><label>Fecha Alta</label>
           <input id="fechaalta" type="text" readonly="readonly" name="fechaalta" value=@Model.Movimiento.Fecha class="form-control" style="width: 110px;" />   </div>
     <div class="form-group" ><label>Monto</label>  <input id="Valor" type="text" value=@Model.Movimiento.Monto_Egresos size="5" name="Valor" style="width: 90px;" class="form-control" ></div>
       </div>
      <br />
        <div class="form-group" > 
           <label> Nombre, descripción y/o características de la especie</label>
           <br />
             <textarea id="Descripcion" rows="2" name="Descripcion" cols="35" style="width: 592px; height: 59px;" class="form-control"> @Model.Movimiento.Descripcion
 </textarea>
       </div>
         
   
    </div>
     
      
<div class="panel-footer">
    <div  style ="width: 400px ; display:inline-block">
          <a class="btn btn-success"  href="../Index" onclick="window.open(this.href, 'Buscar','width=800,height=350,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class ="fa fa-search fa-fw"></span>BUSCAR</a>
      <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/AltaInventario/Create"><span class ="fa fa-file-o  fa-fw"></span>NUEVO</a>
        </div>
         <div style="float :right;display:inline-block">
            <input type="submit" value="Guardar" class="btn btn-primary" />
	  
	</div>
</div>
 </div>
       

     
    </fieldset>
}
<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        $("#BuscarEgresoID").click(function () {
            window.open("@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/AltaInventario/ListadoDetalles/", 'AltaInventario', 'width=800,height=400');
            return false;
        
        });
    }); 
</script>

