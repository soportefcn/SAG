@model IEnumerable<SAG2.Models.TipoProyecto>
@{
	Layout = "~/Views/Shared/PopUp.cshtml";
    ViewBag.Title = "Tipos de proyectos";
}

 <div id="contenido_popup">
     <div class="form-group">
          <input type="text" class="form-control" placeholder="Busqueda" id="busqueda" style="width: 300px;">
        </div> 
        <table class ="table table-bordered table-hover">
             <thead class="fixedHeader">
    <tr class="info">
        <th style="width: 51px;">
            Sigla
        </th>
        <th  style="width: 630px;">
            Nombre
        </th>
        <th style="width: 33px;" class="controles"></th>
    </tr>
                </thead>
    <tbody class="scrollContent">
@foreach (var item in Model)
{
    <tr>
        <td style="width: 51px;">
            @Html.DisplayFor(modelItem => item.Sigla)
        </td>
        <td style="width:630px;">
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td style="width: 33px;">
                    <a href="@Url.Action("Edit", "TiposProyectos", new { id = item.ID })" title="Seleccionar" onclick="window.opener.document.location=this.href; window.close();"><img src="@Url.Content("~/Content/Images/Badge-tick.png")" alt="Seleccionar" width="15" height="15" style="border: 0;" /></a>
                </td>
            </tr>
        }
        </tbody>
        </table>
    </div>