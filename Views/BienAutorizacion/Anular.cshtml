@model SAG2.Models.BienMovimiento
@{
    ViewBag.Title = "Anular Bien";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
    /* Conversion a mayusculas */
    input[type="text"], textarea {
        text-transform: uppercase;
    }
</style>
<div id="SAGBox">

    <h3>Bienes</h3>
    <label>  </label>
    <div id="controles">

    </div>
    <div id="contenido">
        @using (Html.BeginForm("AnularSave", "BienAutorizacion", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.HiddenFor(model => model.ID)

            <fieldset>

                <div class="panel panel-default">
                    <div class="panel-heading"><h3><b>Anular Bien</b></h3></div>
                    <div class="panel-body">
                        <div class="form-inline">
                            <div class="form-group" style="margin-left:30px;">
                                <Label>N° Bien: @Html.Raw(Model.BienID.ToString()) </Label>
                            </div>
                                <div class="form-group" style="margin-left:30px;">
                                <Label>Descripción Bien:  @Html.Raw(Model.Bien.DescripcionBien) </Label>
                            </div>
                        </div>
                        <div class="form-inline">
                            <div class="form-group" style="margin-left:30px;">
                                <strong>Comentario: </strong>
                            </div>
                            <div class="form-group" style="margin-left:30px;">
                                @Html.TextBoxFor(model => model.ComentarioAuditor, new { @class = "form-control", @style="width:400px;",placeholder = "Ingrese Comentario", required = "required" })
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer" style="height: 53px;">
                        
                        <div style="float :right; display:inline-block">
                            <input type="submit" value="Anular" class="btn btn-primary" />
                        </div>
                    </div>
                </div>



                @if (TempData["Message"] != null)
                {
                    @Html.Raw("<script>alert('" + TempData["Message"] + ".');</script>");
                }
            </fieldset>
        }
    </div>
</div>


