@model SAG2.Models.Movimiento

@{
    ViewBag.Title = "Reintegro";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<p>&nbsp;</p>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Reintegro</legend>

       <div class="editor-label">Nº Comprobante</div>
        <div class="editor-field">
            <input type="text" readonly="readonly" value="@ViewBag.NroComprobante" size="@ViewBag.NroComprobante.ToString().Length" /> <span class="indicacion">(Generado automáticamente)</span>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EstablecimientoID, "Establecimiento")
        </div>
        <div class="editor-field">
            @Html.TextBox("EstablecimientoNombre", (string)((SAG2.Models.Proyecto)Session["Proyecto"]).NombreLista, new { @readonly = "readonly" })
        </div>
   
        <div class="editor-label">
            @Html.LabelFor(model => model.Fecha)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Fecha, new { @Value = DateTime.Now.ToShortDateString() })
            @Html.ValidationMessageFor(model => model.Fecha)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.CuentaID, "Cuenta")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CuentaID", String.Empty)
            @Html.ValidationMessageFor(model => model.CuentaID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CuentaCorrienteID, "Cta. Cte.")
        </div>
        <div class="editor-field">
            @Html.TextBox("CuentaCorrienteNumero", (string)((SAG2.Models.CuentaCorriente)Session["CuentaCorriente"]).NumeroLista, new { @readonly = "readonly" })
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Monto_Ingresos, "Monto $")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Monto_Ingresos)
            @Html.ValidationMessageFor(model => model.Monto_Ingresos)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Cheque, "Nº Cheque")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Cheque)
            @Html.ValidationMessageFor(model => model.Cheque)
        </div>
        
        <div class="editor-label">
            <label><strong>Nº Egreso</strong></label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("ComprobanteEgresoID", String.Empty)
        </div>
          
        <div class="editor-label">
            @Html.LabelFor(model => model.Descripcion, "Glosa")
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Descripcion)
            @Html.ValidationMessageFor(model => model.Descripcion)
        </div>
          <p>
            <input type="submit" value="Reintegro" />
        </p>
        </fieldset>
}

<div>
    @Html.ActionLink("Listado de Reintegros", "Index", new { Mostrar = "Reintegros" })
</div>
