@model SAG2.Models.DeudaPendiente
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Comprobante de Deuda Pendiente</title>
</head>
<style type="text/css">
        h2 {
            text-align: center;
        }
        body 
        {
            font-family: Arial;    
        }
        hr {
            margin-bottom: 1px;
            width: 200px;
        }
         td 
    {
    font-size: 12px;    
    }
    
    th 
    {
    font-size: 12px;    
    }
        #Firmas 
        {
            margin-top: 150px;
        }
    </style>
    <script language="javascript" type="text/javascript">
       <!--
        function printThis() {
            window.print();
            setTimeout('window.close()', 10);
            //self.close();
        }
        //-->
    </script>
</head>
<body onLoad="printThis();">
<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td valign="top"><strong>Consejo de Defensa del Niño<br />
    @Html.Raw(Model.Proyecto.NombreLista)</strong></td>
    <td align="right" valign="top">Número de Comprobante: <strong>@Html.Raw(Model.NumeroComprobante.ToString())</strong><br />Fecha: <strong>@Html.Raw(Model.Fecha.ToShortDateString())</strong></td>
  </tr>
</table>
<p>&nbsp;</p>
<h2>Comprobante de Deuda Pendiente</h2>
<table width="100%" border="1" cellspacing="0" cellpadding="0">
  <tr>
    <td><table width="100%" border="0" cellspacing="0" cellpadding="5">
      <tr>
        <td width="250">Fecha:</td>
        <td>@Html.Raw(Model.Fecha.ToShortDateString())</td>
      </tr>
      <tr>
        <td>Cuenta Contable:</td>
        <td>@Html.Raw(Model.Cuenta.NombreLista)</td>
      </tr>
      <tr>
        <td>Documento:</td>
        <td>@Html.Raw(Model.Documento.NombreLista)</td>
      </tr>
      <tr>
        <td>Número:</td>
        <td>@Html.Raw(Model.NumeroDocumento.ToString())</td>
      </tr>

      <tr>
        <td>Fecha Emisión:</td>
        <td>@Html.Raw(Model.FechaEmision.ToShortDateString())</td>
      </tr>
      <tr>
        <td>Fecha Vencimiento:</td>
        <td>@Html.Raw(Model.FechaVencimiento.ToShortDateString())</td>
      </tr>
      <tr>
        <td>Monto $:</td>
        <td>$@Html.Raw(Model.Monto.ToString("#,###"))***</td>
      </tr>
      <tr>
        <td>Beneficiario/Proveedor:</td>
        <td>
            @if (Model.Persona != null)
            {
                @Html.Raw(Model.Persona.NombreCompleto)
            }
            else if (Model.Proveedor != null)
            {
                @Html.Raw(Model.Proveedor.Nombre)
            }
            else
            { 
                @Html.Raw(Model.Beneficiario)
            }
        </td>
      </tr>
      <tr>
        <td>Rut:</td>
        <td>
            @if (Model.Persona != null)
            {
                @Html.Raw(Model.Persona.RutDV)
            }
            else if (Model.Proveedor != null)
            {
                @Html.Raw(Model.Proveedor.RutDV)
            }
            else
            { 
                @Html.Raw(Model.Rut + "-" + Model.DV)
            }
        </td>
      </tr>
    </table></td>
  </tr>
</table>
<p>Glosa</p>
<table width="100%" border="1" cellspacing="0" cellpadding="5">
  <tr>
    <td height="70" valign="top">@Html.Raw(Model.Glosa)</td>
  </tr>
</table>
<p>&nbsp;</p>
<p>&nbsp;</p>
<p>&nbsp;</p>
<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td align="center" valign="top">&nbsp;</td>
    <td width="200px" align="center" valign="top">
    <hr noshade="noshade" size="1" />
    <strong>@Html.Raw(@ViewBag.Director)</strong><br />
    Firma y Timbre Director</td>
  </tr>
</table>
<p>&nbsp;</p>
<p>&nbsp;</p>
<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td width="33%" align="left" valign="top">
    <hr noshade="noshade" size="1" align="left" />
    <strong>@Html.Raw(@ViewBag.Ejecutor)</strong><br />
    Ejecutor Contable</td>
    <td>&nbsp;</td>
    <td width="200px" align="center" valign="top">
    <hr noshade="noshade" size="1" />
    2° Apoderado</td>
  </tr>
</table>
</body>
</html>
