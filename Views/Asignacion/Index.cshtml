@model IEnumerable<SAG2.Models.Inventario>

@{
    
    Layout = "~/Views/Shared/PopUp.cshtml";
    ViewBag.Title = "Alta Inventario";
}
<div id="contenido_popup">
   <div class="form-group">
          <input type="text" class="form-control" placeholder="Busqueda" id="busqueda" style="width: 300px;">
        </div> 
   <table class = "table table-hover table-bordered table-condensed">
   <thead class="fixedHeader">
    <tr class="info">
    <th style ="width:33px;" class="controles"></th>
        <th style ="width:80px;">Nº Alta.</th>
        <th style ="width:80px;">Nº Egreso.</th>
        <th style ="width:90px;">Fecha</th>
       
        <th style ="width: 474px;">Glosa</th>
        
    </tr>
   </thead>
 <tbody class="scrollContent">  
@foreach (var item in Model) {
    <tr>
         <td style ="width:33px;">
        <a href="@Url.Action("Edit", "AltaInventario", new { id = item.ID })" title="Seleccionar" onclick="window.opener.document.location=this.href; window.close();"><img src="@Url.Content("~/Content/Images/Badge-tick.png")" alt="Seleccionar" width="15" height="15" style="border: 0;" /></a>
    </td>
        <td style ="width:80px;">
            @Html.DisplayFor(modelItem => item.Numero )
        </td>
        <td style ="width:80px;">
            @Html.DisplayFor(modelItem => item.Movimiento.NumeroComprobante)
        </td>
        <td style ="width:90px;">
            @item.Fecha.ToShortDateString()
        </td>
        <td style ="width:474px;">
            @Html.DisplayFor(modelItem => item.Movimiento.Descripcion)
        </td>
      
    </tr>
}

</table>
</div>