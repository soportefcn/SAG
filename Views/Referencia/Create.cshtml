@model SAG2.Models.Referencia

@{
    ViewBag.Title = "Ingrese Registro";
}
<div id="SAGBox">
  

    <div id="contenido">
<h3>Referencia</h3>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
         <div class="panel panel-default">
  <div class="panel-heading"><h3><b>Tasa de Impuestos de Honorarios </b></h3></div>
  <div class="panel-body">

     
          
             <div class="editor-label">
                @Html.LabelFor(model => model.GRUPO)
            </div>
             <div class="editor-label">
               <select id="GRUPO" name="GRUPO" class="form-control">
                    <option value="PORCENTAJE" selected>Tasa de Impuestos de Honorarios</option>
             
                </select>
                </div> 


            <div class="editor-label">
                @Html.LabelFor(model => model.VALOR)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.VALOR)
                @Html.ValidationMessageFor(model => model.VALOR)
            </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.PERIODO)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PERIODO)
            @Html.ValidationMessageFor(model => model.PERIODO)
        </div>
         <div class="editor-label">
            @Html.LabelFor(model => model.PREDETERMINADO )
        </div>
             <div class="editor-label">
           <select id="PREDETERMINADO" name="PREDETERMINADO" class="form-control">
                <option value="1" selected>SI</option>
             <option value="2" >NO</option>
            </select>
            </div> 

     </div>
                  <div class="panel-footer">
           <div style="width: 400px; display: inline-block">
               <a class="btn btn-success" href="./Index" onclick="window.open(this.href, 'Buscar','width=750,height=350,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class="fa fa-search fa-fw"></span>BUSCAR</a>
               <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Referencia/Create"><span class="fa fa-file-o  fa-fw"></span>NUEVO</a>

           </div>
           <div style="float: right; display: inline-block">
               <input type="submit" value="Guardar" class="btn btn-primary" />
           </div>

       </div>
         </div>

    </fieldset>
}


        </div>
    </div>