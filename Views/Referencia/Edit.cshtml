@model SAG2.Models.Referencia

@{
    ViewBag.Title = "Modificar";
}



<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
      
   <div class="panel panel-default">
  <div class="panel-heading"><h3><b>Datos de Referencia</b></h3></div>
  <div class="panel-body">
      <input type="hidden" name="COD_REFER" id="COD_REFER" value="@Model.COD_REFER" />
        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.GRUPO)
        </div>
        <div class="editor-field">
           @ViewBag.grupo
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VALOR)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VALOR)
            @Html.ValidationMessageFor(model => model.VALOR)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PERIODO)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PERIODO)
            @Html.ValidationMessageFor(model => model.PERIODO)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PREDETERMINADO)
        </div>
        <div class="editor-field">
            <select id="PREDETERMINADO" name="PREDETERMINADO" class="form-control" style="width: 85px;">
                @if (Model.PREDETERMINADO == 0)
                {
                    <option selected="selected" value="0">NO</option>
                    <option value="1">SI</option>
                 }
                else
                {
                   <option  value="0">NO</option>
                    <option selected="selected" value="1">SI</option>
                } 
            </select>
        </div>
 
 

        
      </div>
       	<div class="panel-footer">
    <div  style ="width: 500px ; display:inline-block">
             <a class="btn btn-success" href="../Index" onclick="window.open(this.href, 'Buscar','width=750,height=350,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class ="fa fa-search fa-fw"></span>BUSCAR</a>
        <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Referencia/Create"><span class ="fa fa-file-o  fa-fw"></span>NUEVO</a>
        <a class="btn btn-danger" href="../Delete/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea borrar este registro?');"><span class ="fa fa-trash-o fa-fw"></span>ELIMINAR</a>
        <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Referencia/Create"><span class ="fa fa-undo fa-fw"></span> CANCELAR</a>
            
        </div>
         <div style="float :right;width:150px;display:inline-block">
 <input class="btn btn-primary" type="submit" value="Guardar" />
 </div>

</div>

   </div>
    </fieldset>
}


