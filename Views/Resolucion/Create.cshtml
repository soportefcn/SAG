@model SAG2.Models.Resolucion

@{
    ViewBag.Title = "Ingreso de Resolución";
    SAG2.Models.Usuario Usuario = (SAG2.Models.Usuario)Session["Usuario"];
}



<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
       

           <div class="panel panel-default">
  <div class="panel-heading"><h3><b> Resolución</b></h3></div>
  <div class="panel-body">

           <div class="form-inline">
               <div class="form-group" style="margin-right: 90px; margin-left: 7px;"> 
                    <label>Tipo Resolución</label>
                <select id="tipo" name="tipo" class="form-control">
                <option value="PorConvenio">Por convenio</option>
                <option value="PorProrroga">Por Prorroga</option>
                <option value="PorUrgencia">Por Urgencia</option>
               
            </select></div>
        <div class="form-group" >
           <label>N° Resolucion</label>
            <br />
            @Html.EditorFor(model => model.ResEx)
            @Html.ValidationMessageFor(model => model.ResEx)
        </div>
      
         <div class="form-group">
            <label>N° Plazas</label>
    <br />
            @Html.EditorFor(model => model.NroPlazas)
            @Html.ValidationMessageFor(model => model.NroPlazas)
        </div>
        </div>
        <div class="form-inline" style="margin-top: 10px;">
        <div class="form-group" style="margin-left: 7px;">
            <label>Fecha Inicio</label>
            <br />
            @Html.TextBoxFor(model => model.FechaInicio, new { @class = "calendario form-control"})
       
        </div>

        <div class="form-group">
         <label>Fecha Termino</label>
            <br />
             @Html.TextBoxFor(model => model.FechaTermino, new { @class = "calendario form-control"})

        </div>
   @if (Usuario.esAdministrador)
   {
               <div class="form-group">
         <label>Fecha Prorroga</label>
            <br />
             @Html.TextBoxFor(model => model.FechaProrroga , new { @class = "calendario form-control"})

        </div>

   }

        </div>


        <div class="form-group" style="margin-top: 10px;margin-left: 7px;">
           <label>Comentarios</label>
            <br />
              @Html.TextAreaFor(model => model.Comentarios, new { @class = "form-control" })

        </div>
</div>
                 <div class="panel-footer">
	<div  style ="width: 500px ; display:inline-block">
           @if (Usuario.esAdministrador)
   {
	     <a class="btn btn-success" href="./Index" onclick="window.open(this.href, 'Buscar','width=750,height=350,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class ="fa fa-search fa-fw"></span>BUSCAR</a>
        
           }       
        <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Resolucion/Create"><span class ="fa fa-file-o  fa-fw"></span>NUEVO</a>
        </div>
         <div style="float :right;display:inline-block">
           <input class="btn btn-primary" type="submit" value="Guardar" />  

	</div>

  </div>
           </div>
         @if (TempData["Message"] != null)
{
    @Html.Raw("<script>alert('"+TempData["Message"]+".');</script>");
}
    </fieldset>
}

<div>

</div>
