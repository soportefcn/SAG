@model SAG2.Models.BienModInventarioVM
@{
    Layout = "~/Views/Shared/PopUp.cshtml";
    ViewBag.Title = "Mantenedor Bienes";
    SAG2.Classes.Util utils = new SAG2.Classes.Util();
}



<div id="contenido_popup">
    <table class="table table-bordered table-hover">
        <thead class="fixedHeader">
            <tr class="info">
                <th style="width: 33px;" class="controles"></th>
                <th style="width: 113px;"> Detalles</th>
                <th style="width: 49px;">Cód </th>
                <th style="width: 200px;">Familia </th>¿
                <th style="width: 100px;">Condición </th>
                <th style="width: 70px;">Cantidad </th>
                <th style="width: 300px;">Descripcion Bien </th>
                <th style="width: 100px;">Monto </th>
                <th style="width: 100px;">N° Comprobante </th>
                <th style="width: 100px;">Ubicación </th>
                <th style="width: 250px;">Proyecto </th>
                <th style="width: 200px;">Usuario </th>
            </tr>
        </thead>
        <tbody class="scrollContent">

            @foreach (var item in Model.lista)
            {
                var style = "";

            <tr @Html.Raw(style)>
                <td style="width: 33px;">
                    <a href="@Url.Action("Edit", "BienModInventario", new { id = item.ID})" title="Seleccionar" onclick="window.opener.document.location=this.href; window.close();"><img src="@Url.Content("~/Content/Images/Badge-tick.png")" alt="Seleccionar" width="15" height="15" style="border: 0;" /></a>
                </td>
                <td style="width: 105px;">

                    <a class="btn btn-info" href="@Url.Action("DetailAlta", "BienModInventario", new { id = item.ID, movimientoID = item.MovimientoBienID})" title="Seleccionar" onclick="window.opener.document.location=this.href; window.close();">Ver Detalle</a>
                </td>
                <td style="width: 49px; max-width:49px;" align="center">@item.ID</td>
                <td style="width: 200px; max-width:200px;" ">@item.Familia</td>
                <td style="width: 100px; max-width:100px;" ">@item.CondicionText</td>
                <td style="width: 70px; max-width:70px;">@item.Cantidad</td>
                <td style="width: 300px; max-width:300px;">@item.DescripcionBien</td>
                <td style="width: 100px; max-width:100px;">$@item.MontoInt.ToString("#,##0")</td>
                <td style="width: 100px; max-width:100px;">@item.ComentarioAuditor</td>
                <td style="width: 100px; max-width:100px;">@item.Ubicacion</td>
                <td style="width: 250px; max-width:250px;">@item.Proyecto</td>
                <td style="width: 200px; max-width:200px;">
                    @item.Usuario
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>