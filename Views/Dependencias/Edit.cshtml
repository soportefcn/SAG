@model SAG2.Models.Dependencia
@{
    ViewBag.Title = "Ingresar registro";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
/* Conversion a mayusculas */
input[type="text"], textarea
{
    text-transform: uppercase;
}
</style>
<div id="SAGBox">
    <h3>Dependencia</h3>
   
    <div id="contenido">
    @ViewBag.Mensaje
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>

  <div class="panel panel-default">
  <div class="panel-heading"> <h3>Dato de dependencia</h3></div>
  <div class="panel-body">
     <div class="form-inline">
       <div class="form-group" style="margin-right: 30px;">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Nombre, new { @class="form-control", style="width: 400px ;" })
        </div>
         </div>
  </div>
  <div class="panel-footer">
	<div  style ="width: 500px ; display:inline-block">
          <a class="btn btn-success" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Dependencias/Index" onclick="window.open(this.href, 'Buscar','width=750,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class ="fa fa-search fa-fw"></span>BUSCAR</a>
            <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Dependencias/Create"><span class ="fa fa-file-o  fa-fw"></span>NUEVO</a>
            <a class="btn btn-danger" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Dependencias/Delete/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea eliminar esta dependencia?');"><span class ="fa fa-trash-o fa-fw"></span>ELIMINAR</a>
           <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Dependencias/Create"><span class ="fa fa-undo fa-fw"></span>CANCELAR</a>
            
        </div>
         <div style="float :right;display:inline-block">
	      <input class="btn btn-primary" type="submit" value="Guardar"  />
	</div>

  </div>
</div>

       

        <p>
            
        </p>
    </fieldset>
}
    </div>
</div>