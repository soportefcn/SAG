@model IEnumerable<SAG2.Models.Persona>
@{
	Layout = "~/Views/Shared/PopUp.cshtml";
    ViewBag.Title = "Personal";
}
 <div class="form-group">
          <input type="text" class="form-control" placeholder="Busqueda" id="busqueda" style="width: 300px;">
        </div> 
 <div id="contenido_popup">
        <table class ="table table-bordered table-hover">
            <thead class="fixedHeader">
    <tr class="info">
        <th style=" width:600px;">
            Nombre
        </th>
        <th style=" width:95px;">
            Rut
        </th>
        <th style=" width:33px;"class="controles"></th>
    </tr>
</thead>
<tbody class="scrollContent">
@foreach (var item in Model)
{
    <tr>
        <td style=" width:600px;" >
            @Html.DisplayFor(modelItem => item.NombreCompleto)
        </td>
        <td align="right">
            @Html.DisplayFor(modelItem => item.RutDV)
        </td>
        <td>
                    <a href="@Url.Action("Edit", "Personal", new { id = item.ID })" title="Seleccionar" onclick="window.opener.document.location=this.href; window.close();"><img src="@Url.Content("~/Content/Images/Badge-tick.png")" alt="Seleccionar" width="15" height="15" style="border: 0;" /></a>
                </td>
            </tr>
        }
    </tbody>
        </table>
    </div>