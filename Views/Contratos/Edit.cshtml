@model SAG2.Models.Contrato
@{
    ViewBag.Title = "Modificar";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
/* Conversion a mayusculas */
input[type="text"], textarea
{
    text-transform: uppercase;
}
</style>
<div id="SAGBox">
    <h3>Contratos</h3>

    <div id="contenido">
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ProyectoID)
    @Html.HiddenFor(model => model.ID)
    @Html.ValidationSummary(true)
    <fieldset>
     <div class="panel panel-default">
    <div class="panel-heading"><h3>Dato de contrato</h3></div>
    <div class="panel-body">
        <div class="form-group form-inline">
            <div class="form-group" style="margin-right: 30px;">
                @Html.LabelFor(model => model.ServicioID, "Servicio")
            </div>
            <div class="form-group">
            @Html.DropDownList("ServicioID", String.Empty)
        </div>
            </div>

        <div class="form-group form-inline">
            <div class="form-group" style="margin-right: 30px;">
                @Html.LabelFor(model => model.Nombre)
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", style = "width:400px;" })
        </div>
</div>
      <div class="form-group form-inline">
        <div class="form-group" style="margin-right: 30px;">
            @Html.LabelFor(model => model.Monto)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Monto)
            <select name="Moneda" id="Moneda" class ="form-control">
                <option value="Pesos"@if (Model.Moneda.Equals("Pesos")){@Html.Raw(" selected=\"selected\"")}>Pesos</option>
                <option value="UF"@if (Model.Moneda.Equals("UF")){@Html.Raw(" selected=\"selected\"")}>UF</option>
            </select>
        </div>
          </div>
        <div class="form-group form-inline">
        <div class="form-group" style="margin-right: 30px;">
            @Html.LabelFor(model => model.Activo)
        </div>
        <div class="form-group">
            @if (Model.Activo != null)
            {
                <input class="form-control" type="checkbox" name="Estado" id="Estado" value="Activo" checked="checked" />
            }
            else
            {
                <input class="form-control" type="checkbox" name="Estado" id="Estado" value="Activo" />
            }
        </div>
            </div>
     
        <div class="form-group" style="margin-right: 30px;">
            @Html.LabelFor(model => model.Comentario)
        </div>
        <div class="form-group">
            @Html.TextAreaFor(model => model.Comentario, new { @class = "form-control" })
           
        </div>
           
  </div>
  <div class="panel-footer">
	<div  style ="width: 500px ; display:inline-block">
           <a class="btn btn-success"  href="../Index" onclick="window.open(this.href, 'Buscar','width=750,height=400,scrollbars=yes,menubar=no,toolbars=no'); return false"><span class ="fa fa-search fa-fw"></span>BUSCAR</a>
            <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Contratos/Create"><span class ="fa fa-file-o  fa-fw"></span>NUEVO</a>
            <a  class="btn btn-danger" href="../Delete/@Html.Raw(Model.ID.ToString())" onclick="return confirm('Realmente desea borrar este registro?');"><span class ="fa fa-trash-o fa-fw"></span>ELIMINAR</a>
            <a class="btn btn-default" href="@System.Configuration.ConfigurationManager.AppSettings["prePath"].ToString()/Contratos/Create"><span class ="fa fa-undo fa-fw"></span>CANCELAR</a>
            
        </div>
         <div style="float :right;display:inline-block">
	     <input class="btn btn-primary" type="submit" value="Guardar" />
	</div>

  </div>
</div>

  
        <p>
            
        </p>
    </fieldset>
}
    </div>
</div>