@model IEnumerable<SAG2.Models.Contrato>
@{
    Layout = "~/Views/Shared/PopUp.cshtml";
    ViewBag.Title = "Contratos";
}
 <div class="form-group">
          <input type="text" class="form-control" placeholder="Busqueda" id="busqueda" style="width: 300px;">
        </div> 
 <div id="contenido_popup">
   <table class ="table table-bordered table-hover">
       <thead class="fixedHeader">
    <tr class="info">
        <th style=" width:33px;" class="controles"></th>
        <th style=" width:97px;">
            Servicio
        </th>
        <th style=" width:380px;">
            Nombre
        </th>
        <th style=" width:90px;">
            Monto
        </th>
        <th style=" width:90px;">
            Moneda
        </th>
        <th style=" width:60px;">
            Estado
        </th>
        
    </tr>
   </thead>
 <tbody class="scrollContent">  
@foreach (var item in Model)
{
    <tr>
        <td style=" width:33px;">
            <a href="@Url.Action("Edit", "Contratos", new { id = item.ID })" title="Seleccionar" onclick="window.opener.document.location=this.href; window.close();"><img src="@Url.Content("~/Content/Images/Badge-tick.png")" alt="Seleccionar" width="15" height="15" style="border: 0;" /></a>
        </td>
        <td style=" width:97px;">
            @Html.DisplayFor(modelItem => item.Servicio.Nombre)
        </td>
        <td style=" width:380px;">
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td style=" width:90px;">
            @Html.DisplayFor(modelItem => item.Monto)
        </td>
        <td style=" width:90px;">
            @Html.DisplayFor(modelItem => item.Moneda)
        </td>
        <td style=" width:40px;" align="center">
        @if (item.Activo != null)
        {
            <span class="label label-success">ACTIVO</span>
        }
        else
        {
            <span class="label label-danger">INACTIVO</span>
        }
        </td>
        
    </tr>
}
     </tbody>
        </table>
    </div>